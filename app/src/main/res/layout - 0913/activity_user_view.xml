<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/logon_bg"
    android:orientation="vertical"
    >
    <include layout="@layout/include_toolbar_title"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_height="30dp">
            <TextView
                android:text="@string/job_number"
                android:layout_width="50dp"
                android:textColor="@color/optiontext_color_black"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/log_off_job_num"
                android:textColor="@color/optiontext_color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_height="30dp">
            <TextView
                android:text="@string/username"
                android:layout_width="50dp"
                android:textColor="@color/optiontext_color_black"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/log_off_username"
                android:textColor="@color/optiontext_color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
</LinearLayout>
