<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <!--资产名称   编号-->
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">
         <TextView
             android:id="@+id/asset_type_txt"
             android:layout_width="50dp"
             android:layout_height="match_parent" />
         <TextView
             android:id="@+id/asset_code_txt"
             android:layout_width="50dp"
             android:layout_height="match_parent" />
      </LinearLayout>
      <!--楼层-->
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">
         <TextView
             android:text="@string/job_number"
             android:layout_marginLeft="15dp"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
         <TextView
             android:id="@+id/asset_floor_txt"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
      </LinearLayout>
      <!--实际存储地点-->
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">
         <TextView
             android:text="实际存储地点:"
             android:gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
         <TextView
             android:id="@+id/asset_realPlace_txt"
             android:gravity="center_vertical"
             android:layout_width="50dp"
             android:layout_height="match_parent" />
      </LinearLayout>
      <!--保管人-->
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">
         <TextView
             android:text="保管人"
             android:gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_width="50dp"
             android:layout_height="match_parent" />
         <TextView
             android:id="@+id/asset_server_txt"
             android:gravity="center_vertical"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
      </LinearLayout>
      <!--实际保管人-->
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">
         <TextView
             android:text="实际保管人"
             android:gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
         <TextView
             android:id="@+id/asset_realserver_txt"
             android:layout_width="50dp"
             android:layout_height="match_parent" />
      </LinearLayout>

      <!--验收状态-->
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">
         <TextView
             android:text="验收状态"
             android:gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
         <TextView
             android:id="@+id/asset_state_txt"
             android:gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent" />
      </LinearLayout>
   </ScrollView>
</LinearLayout>
