<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/rl_item_parent"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/asset_id"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_toRightOf="@+id/asset_id"
            android:layout_toLeftOf="@+id/asset_process_state"
            android:id="@+id/asset_name_and_num"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="asdadssd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/asset_process_state"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_below="@+id/rl_item_parent"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/xml_bg"></View>
</RelativeLayout>