<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/user_bg"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/optiontext_color_black"
                android:textSize="16dp" />
            <LinearLayout
                android:id="@+id/ll_title_right"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="13dp" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:text="@string/company_name"
            android:layout_marginTop="50dp"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="@color/optiontext_color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/user_icon_img"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/job_num_txt"
                android:text="@string/job_number"
                android:layout_width="wrap_content"
                android:layout_marginLeft="135dp"
                android:textColor="@color/optiontext_color_black"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_job_num"
                android:layout_toRightOf="@+id/job_num_txt"
                android:layout_marginLeft="11dp"
                android:layout_gravity="center_vertical|left"
                android:gravity="left"
                android:textColor="@color/optiontext_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/username_txt"
                android:text="@string/username"
                android:layout_width="wrap_content"
                android:layout_marginLeft="135dp"
                android:textColor="@color/optiontext_color_black"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_username"
                android:layout_toRightOf="@+id/username_txt"
                android:layout_marginLeft="11dp"
                android:layout_gravity="center_vertical|left"
                android:gravity="left"
                android:textColor="@color/optiontext_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
