<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/include_toolbar_title"/>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:scaleType="fitXY"
        android:src="@drawable/qrcode_download" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_app_version"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="banben"
            android:textColor="@color/green_light"
            android:textSize="@dimen/fontSize" />
        <TextView
            android:id="@+id/txt_about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="@string/company_introduce"
            android:textColor="@color/optiontext_color_black"
            android:textSize="@dimen/fontSize" />
        <TextView
            android:id="@+id/txt_about_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/optiontext_color_black"
            android:textSize="@dimen/fontSize" />
    </LinearLayout>

</LinearLayout>